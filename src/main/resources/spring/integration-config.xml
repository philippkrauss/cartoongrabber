<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:applicationContext.properties"/>

    <beans:import resource="classpath*:/spring/integration-gateway.xml"/>
    <context:component-scan base-package="cartoongrabber"/>

    <int:splitter ref="sourceSplitter" input-channel="inputChannel" output-channel="sourceChannel" />

    <int:channel id="sourceChannel" />

    <int:transformer ref="sourceToDefinitionTransformer" input-channel="sourceChannel" output-channel="definitionChannel" />

    <int:channel id="definitionChannel"/>

    <int:transformer ref="definitionToCartoonTransformer" input-channel="definitionChannel"
                     output-channel="cartoonChannel"/>

    <int:channel id="cartoonChannel"/>

    <int:aggregator ref="cartoonAggregator" input-channel="cartoonChannel" output-channel="aggregatedCartoonsChannel" />

    <int:channel id="aggregatedCartoonsChannel" />

    <int:service-activator input-channel="aggregatedCartoonsChannel" ref="fileCollection" />
    
    <bean class="cartoongrabber.tools.FileSystemPersistenceImpl" >
        <constructor-arg value="${conf.filecollection.baseDir}"/>
    </bean>

    <bean class="cartoongrabber.tools.DateServiceImpl" />
    <bean class="cartoongrabber.tools.UrlDownloaderServiceImpl" />
    <bean class="cartoongrabber.tools.PropertyFileRepository" >
        <constructor-arg value="${conf.sources.baseDir}" />
    </bean>

    

</beans>